<table class="table table-hover">
  <thead>
  <tr>
    <th>#</th>
    <th>Project</th>
    <th>Pledge</th>
    <th>Estimated Delivery</th>
  </tr>
  </thead>
  <tbody>
  <% if pledges.any?  %>
  <% pledges.each do |p| %>
      <%= render 'pledge', pledge: pledge %>
          <% end %>
  <% else %>
  <tr><td colspan="4">No Pladges Available</td></tr>
  <% end %>
  </tbody>
</table>